---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/wedding/favicon.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/wedding/css/sakura.min.css" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content="Hai Anh & Nam Tran Wedding" />
    <meta
      name="description"
      content="Invite you to join us at the celebration of our wedding"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vuhaianh.com/wedding" />
    <meta property="og:title" content="Hai Anh & Nam Tran Wedding" />
    <meta
      property="og:description"
      content="Invite you to join us at the celebration of our wedding"
    />
    <meta property="og:image" content="/wedding/img/page1-2.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://vuhaianh.com/wedding" />
    <meta property="twitter:title" content="Hai Anh & Nam Tran Wedding" />
    <meta
      property="twitter:description"
      content="Invite you to join us at the celebration of our wedding"
    />
    <meta property="twitter:image" content="/wedding/img/page1-2.jpg" />
  </head>
  <body>
    <div id="device-warning">
      <div class="phone"></div>
      <div class="message">Vui lòng <br /> chuyển sang màn hình ngang</div>
    </div>
    <slot />
    <script is:inline src="/wedding/js/sakura.js"></script>
    <script>
      const sakura = new Sakura("body", {
        colors: [
          {
            gradientColorStart: "rgba(255, 183, 197, 0.9)",
            gradientColorEnd: "rgba(255, 197, 208, 0.9)",
            gradientColorDegree: 120,
          },
        ],
      });
    </script>
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
  }
  body {
    margin: 0;
    padding: 0;
    /* background: var(--background) url("/wedding/img/bg.jpg") no-repeat left top; */
    background-color: #c5c7af;
    height: 100vh;
    overflow: hidden;
    font-family: "Sree Krushnadevaraya", serif;
  }
  @media screen and (orientation: landscape) {
    #device-warning {
      display: none;
    }
  }
  @media screen and (orientation: portrait) {
    .pages {
      display: none;
    }
    #device-warning {
      display: flex;
      width: 100%;
      height: 100%;
      padding: 10px;
      justify-content: center;
      align-items: center;
      flex-flow: column wrap;
    }
  }

  #device-warning .phone {
    height: 50px;
    width: 100px;
    border: 3px solid #000;
    border-radius: 10px;
    animation: rotate 1.5s ease-in-out infinite alternate;
    position: relative;
  }

  #device-warning .phone:before {
    content: "";
    background: #fff
      url(https://upload.wikimedia.org/wikipedia/commons/3/3b/Eo_circle_green_checkmark.svg)
      no-repeat center center;
    background-size: contain;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 30px;
    height: 30px;
    transform: rotate(90deg);
  }

  #device-warning .message {
    font-family: Arial, sans-serif;
    color: #eb6e09;
    font-size: 1em;
    margin-top: 40px;
    text-align: center;
    /* text-transform: uppercase; */
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(-90deg);
    }
    100% {
      transform: rotate(-90deg);
    }
  }
</style>
